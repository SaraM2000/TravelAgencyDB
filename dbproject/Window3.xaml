            </Button>
            <Label Content="Search Employees" FontWeight="SemiBold" Margin="540,10,505,1768" FontSize="58" Foreground="#FFF7F1FF" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="Delete_Btn" Content="Delete" Margin="584,1127,584,407" Background="#FF5D1D8E" Foreground="White" FontSize="38" FontWeight="Bold" FontFamily="Franklin Gothic Medium">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
