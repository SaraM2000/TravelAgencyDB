                </Button.Resources>
            </Button>
            <Button x:Name="Update" Content="Update" Margin="584,1288,584,246" Background="#FF5D1D8E" Foreground="White" FontSize="38" FontWeight="Bold" FontFamily="Franklin Gothic Medium">
